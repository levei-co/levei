<section class="section">
  <div class="section-header d-mobile-none">
    <h1>Reverses</h1>
    <div class="section-header-breadcrumb">
      <div class="breadcrumb-item"><%= link_to 'Dashboard', root_path %></div>
      <div class="breadcrumb-item"><%= link_to 'Reverses', reverses_path %></div>
      <div class="breadcrumb-item">Show Reverse</div>
    </div>
  </div>

  <div class="section-body">
    <div class="card">
      <div class="card-header">
        <h4>Show Reverse</h4>
      </div>
      <div class="card-body">
        <dl class="row">
          <dt class="col-sm-3">User:</dt>
          <dd class="col-sm-9"><%= @reverse.user %></dd>
          <dt class="col-sm-3">Order:</dt>
          <dd class="col-sm-9"><%= @reverse.order_id %></dd>
          <dt class="col-sm-3">Status:</dt>
          <dd class="col-sm-9"><%= @reverse.status %></dd>
          <dt class="col-sm-3">Reason:</dt>
          <dd class="col-sm-9"><%= @reverse.reason %></dd>
        </dl>
      </div>
    </div>
  </div>
</section>

<%= link_to icon('fas fa-edit', 'Edit'), edit_reverse_path(@reverse), data: { turbolinks_action: 'replace' }, class: 'btn btn btn-icon icon-left btn-warning' %>
<%= link_to icon('fas fa-arrow-left', 'Back'), 'javascript:history.back()', class: 'btn btn-icon icon-left btn-secondary d-mobile-none' %>

<% content_for(:page_title, 'Show Reverse') %>
