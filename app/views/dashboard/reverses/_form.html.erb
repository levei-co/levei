<%= form_with(model: reverse, data: { controller: 'validation' }) do |form| %>
  <div class="form-group">
    <%= form.label :user_id %>
    <%= form.collection_select(:user_id, User.all, :id, :to_s, {}, { class: 'form-control', data: { controller: 'select' } }) %>
  </div>
  <div class="form-group">
    <%= form.label :order_id %>
    <%= form.text_field :order_id, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :status %>
    <%= form.number_field :status, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :reason %>
    <%= form.number_field :reason, class: 'form-control' %>
  </div>
  <div class="card-footer pl-0">
    <%= form.submit class: 'btn btn-success' %>
  </div>
<% end %>
